---
import Section from "../Section.astro"

import { education } from "@cv"
---

<Section title="Education">
  <ul>
    {
      education.map(({ institution, startDate, endDate, area, courses }) => {
        const coursesString = courses.length ? courses.join(", ") : ""
        const startYear = new Date(startDate).getFullYear()
        const endYear =
          endDate != null ? new Date(endDate).getFullYear() : "Now"
        const years = `${startYear} - ${endYear}`

        return (
          <li>
            <article>
              <header>
                <div>
                  <h3>{institution}</h3>
                </div>

                <time>{years}</time>
              </header>

              <footer>
                <p>{area}</p>
                {coursesString ? (
                  <p class="courses">Courses: {coursesString}</p>
                ) : (
                  ""
                )}
                <p />
              </footer>
            </article>
          </li>
        )
      })
    }
  </ul>
</Section>

<style>
  ul {
    display: flex;
    flex-direction: column;
    gap: 32px;
  }

  article h3 {
    font-weight: 500;
    color: #111;
  }

  header {
    display: flex;
    justify-content: space-between;
    align-items: flex-start;
    margin-bottom: 4px;
  }

  time {
    color: #555;
    font-size: 0.85rem;
    min-width: 102px;
    text-align: right;
  }
  .courses {
    margin: 0.3rem 0 0 0.5rem;
    letter-spacing: 0.75;
    line-height: normal;
  }
</style>
